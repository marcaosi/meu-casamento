<body>
    <div class="row">
        <div class="col-md-10 col-md-offset-1 col-sm-12 col-xs-12 text-right">
            <a href="/admin/gift" class="btn btn-large btn-primary">Adicionar</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-10 col-md-offset-1 col-sm-12 col-xs-12">
            <table class="table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Nome</th>
                        <th>Status</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <!-- <%=JSON.stringify(gifts)%> -->
                    <%gifts.forEach(element => {%>
                        <tr>
                            <td></td>
                            <td><%=element.name%></td>
                            <td><%=element.status%></td>
                            <td>
                                <a href="/admin/gift/<%=element._id%>/delete">Apagar</a> 
                                <a href="/admin/gift/<%=element._id%>">Editar</a> 
                                <%if(element.status == "Marcado"){%>
                                    <a href="#" class="link-dropdown" data-target="<%=element._id%>">
                                        <i id="dropdown-arrow-down" class="glyphicon glyphicon-menu-down pull-right"></i>
                                        <i id="dropdown-arrow-up" class="glyphicon glyphicon-menu-up pull-right"></i>
                                    </a>
                                <%}%>
                            </td>
                        </tr>
                        <%if(element.person){%>
                            <tr class="element-dropdown" data-visible="hide" id="<%=element._id%>">
                                <td></td>
                                <td><%=element.person.name%></td>
                                <td><%=element.person.email%></td>
                                <td><%=element.person.phone%></td>
                            </tr>
                        <%}%>
                    <%})%>
                </tbody>
            </table>
        </div>
    </div>

    <!-- footer close -->
    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="/js/jquery.min.js" type="text/javascript"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="/js/navigation.js" type="text/javascript"></script>
    <script src="/js/menumaker.js" type="text/javascript"></script>
    <script type="text/javascript" src="/js/owl.carousel.min.js"></script>
    <script type="text/javascript" src="/js/slider.js"></script>
    <script src="/js/jquery.easing.min.js"></script>
    <script src="/js/scrolling-nav.js"></script>

    <script src="/js/manageGifts.js"></script>
</body>

</html>